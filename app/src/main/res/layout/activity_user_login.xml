<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="garvit.spidy.daanpaatra.UserLoginActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout_UserLogin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <EditText
                android:id="@+id/ed_Name_User"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Your Name"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/ed_PhoneNumber_User"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Your Phone Number"
                android:inputType="number"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/ed_Address_User"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Your Address"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/ed_Email_User"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Your E-Mail"
                android:inputType="textEmailAddress"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/ed_Password_User"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Your Password"
                android:inputType="textPassword"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/ed_Password_Re_User"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Re-Enter Your Password"
                android:inputType="textPassword"
                android:singleLine="true"/>

            <Button
                android:id="@+id/btn_Submit_User"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_User_Confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible">


            <TextView
                android:id="@+id/tv_Name_User"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Your Name"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_Number_User"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Your Phone Number"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_Address_User"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Your Address"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/tv_Email_User"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Your E-Mail"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_Confirm_User"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn_Cancel_User"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textSize="15sp" />

        </LinearLayout>
    </FrameLayout>
</ScrollView>